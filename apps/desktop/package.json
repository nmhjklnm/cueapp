{
  "name": "@cueapp/desktop",
  "private": true,
  "type": "module",
  "main": "dist/main.js",
  "scripts": {
    "dev": "pnpm build && electron .",
    "start": "pnpm build && electron .",
    "build": "tsc -p tsconfig.json",
    "pack:mac": "electron-builder --mac --dir",
    "dist:mac": "electron-builder --mac",
    "typecheck": "tsc -p tsconfig.json --noEmit"
  },
  "dependencies": {
    "better-sqlite3": "^12.6.0",
    "chardet": "^2.1.1",
    "electron": "^33.0.0",
    "iconv-lite": "^0.7.2"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^22.10.2",
    "electron-builder": "^24.13.3",
    "typescript": "^5.7.3"
  },
  "build": {
    "appId": "com.nmhjklnm.cueapp",
    "productName": "cueapp",
    "asar": false,
    "directories": {
      "output": "dist_electron"
    },
    "files": [
      "dist/**",
      "package.json",
      "node_modules/**"
    ],
    "extraResources": [
      {
        "from": "../console",
        "to": "apps/console",
        "filter": [
          "**/*",
          "!**/.git/**",
          "!**/node_modules/.cache/**"
        ]
      },
      {
        "from": "../../packages/cli",
        "to": "packages/cli",
        "filter": [
          "**/*",
          "!**/.git/**",
          "!**/package-lock.json"
        ]
      }
    ],
    "mac": {
      "target": [
        {
          "target": "zip"
        }
      ]
    }
  }
}
