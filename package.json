{
  "name": "cueapp",
  "private": true,
  "packageManager": "pnpm@9.1.4",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "pnpm -C apps/desktop dev",
    "dev:console": "pnpm -C apps/console dev",
    "dev:desktop": "pnpm -C apps/desktop dev",
    "build:console": "pnpm -C apps/console build && node scripts/prepare-console-standalone.mjs",
    "build:desktop": "pnpm -C apps/desktop build",
    "dist:mac": "pnpm build:console && pnpm build:desktop && pnpm -C apps/desktop dist:mac",
    "dist:win": "pnpm build:console && pnpm build:desktop && pnpm -C apps/desktop dist:win",
    "dist:linux": "pnpm build:console && pnpm build:desktop && pnpm -C apps/desktop dist:linux",
    "postinstall": "pnpm -C apps/desktop exec electron-rebuild -w better-sqlite3",
    "build": "pnpm -r build",
    "lint": "pnpm -r lint",
    "typecheck": "pnpm -r typecheck"
  },
  "devDependencies": {
    "@electron/rebuild": "^4.0.2"
  }
}
